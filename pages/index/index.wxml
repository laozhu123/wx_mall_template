<!-- welcome.wxml -->
<view class="warp" wx:if="{{!finish}}">
  <!-- <image class="cloud_bg" src="../../images/cloud_bg.gif"></image> -->
  <image class="moon" src="../../images/moon.png"></image>
  <!-- <text class="index">当前排名{{index}}名</text> -->
  <!-- <image class="head" src="{{user_head}}" background-size="cover" bindtap="goMyPage"></image> -->
  <!-- <image class="cloud_earth" src="../../images/cloud_earth.png"></image> -->
  <image class="rocket" src="../../images/rocket.gif" animation="{{rocketAnimation}}"></image>
  <text wx:if="{{showAddOilNum}}" class="add_oil_num">+{{addOilNum}}元</text>
  <text class="now_oil_num">{{nowOilNum}}元</text>

  <button wx:if="{{hasNotSelfAdd}}" type="primary" class="self_btn" bindtap="selfAdd">加燃料</button>
  <button wx:else type="primary" class="self_btn" class="other_btn" bindtap="showShareDiv">邀请好友帮我加燃料</button>
  <!-- <image class="power" src="{{powerImage}}" bindtap="showShareDiv"></image> -->

  <progress class="progress" percent="{{percent}}" show-info="{{isSi}}" stroke-width="{{sw}}" activeColor="{{pc}}" backgroundColor="{{pbc}}" active="{{isActive}}" active-mode="forwards" animation="{{progressRotation}}">
  </progress>
  <image wx:if="{{show_down}}" bindtap="goDown" src="../../images/arrow_down.png" class="arrow_down"></image>
</view>

<view class="second_warp" wx:if="{{nowOilNum > 0}}">
  <image src="../../images/honbao_bg.png" class="honhao_bg"></image>
  <image wx:if="{{show_up}}" bindtap="goUp" src="../../images/arrow_up.png" class="arrow_up"></image>
  <text class="t1">砍价后的最终金额</text>
  <text class="t2">¥{{nowOilNum}}</text>
  <button wx:if="{{finish}}" type="primary" class="btn" bindtap="goCouponPage">查看我的优惠券</button>
  <button wx:else type="primary" disabled="true" class="btn">使用优惠券</button>
  <text class="num">已砍价{{nowNum}}/{{max}}次</text>

  <scroll-view class="sv" scroll-y="true">
    <view class="detail-box" wx:for-items="{{peoples}}" wx:key="*this">
      <image src="../../images/wx.png" class="head"></image>
      <text class="name">ruipol</text>
      <text class="time">21:35</text>
      <text class="money">117元</text>
    </view>
  </scroll-view>


</view>

