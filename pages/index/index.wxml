<!-- welcome.wxml -->
<view class="warp">
  
  <image class="left_cloud" src="../../images/cloud.gif"></image>
  <image class="moon" src="../../images/moon.png"></image>
  <text class="index">当前排名{{index}}名</text>
  <image class="head" src="{{user_head}}" background-size="cover" bindtap="goMyPage"></image>
  <image class="cloud_earth" src="../../images/cloud_earth.png"></image>
  <image class="rocket" src="../../images/rocket.gif"></image>
  <text wx:if="{{showNotice}}" class="speed_up">点击加速</text>
  <image class="power" src="{{powerImage}}" bindtap="showShareDiv"></image>

  <view wx:if="{{openShare}}" class="shareFloatDiv1"></view>
  <view wx:if="{{openShare}}" class="invite-container">
    <image class="back"  src="../../images/tech_dialog.jpg"></image>
    <text class="content">邀请好友来助力</text>
    <text class="invite_btn_off" bindtap="closeShareDiv">取消</text>
    <text class="invite_btn_on">邀请</text>
    <button type="primary" plain="true" open-type="share" class="invite_btn" style="opacity:0"></button>
  </view>

  <view wx:if="{{show_help}}" class="shareFloatDiv1"></view>
  <view wx:if="{{show_help}}" class="zhuli-container">
    <image class="back"  src="../../images/tech_dialog.jpg"></image>
    <image class="head_back" src="../../images/head_back.gif"></image>
    <image class="head" src="{{help_img}}"></image>
    <text class="name">姓名：{{help_nick}}</text>
    <text class="occupation">职位：{{help_occupation}}</text>
    <text class="help_index">排名：第{{help_index}}位</text>
    <text class="zhuli_btn_off" bindtap="zhuli_cancel">取消</text>
    <text class="zhuli_btn_on" bindtap="zhuli">助力</text>
  </view>

  <view wx:if="{{show_speed_up}}" class="shareFloatDiv1"></view>
  <view wx:if="{{show_speed_up}}" class="motion_rocket-container">
    <image class="back"  src="../../images/speed_rocket.gif"></image>
  </view>

  <view wx:if="{{show_choujiang}}" class="shareFloatDiv1"></view>
  <view wx:if="{{show_choujiang}}" class="choujiang-container">
    <image class="back"  src="../../images/choujiang.png"></image>
    <view class="invisible-btn" bindtap="choujiang"></view>
  </view>
</view>