/* pages/coupons-new/index.wxss */
Page{
  background: #061F3E;
}
.coupon-item{
  width: 96%;
  margin-left: 2%;
  height: 200rpx;
  border-radius: 5px;
  margin-top: 5px;
  margin-bottom: 5px;
  position: relative;
}
.coupon-item .name{
  position: absolute;
  top: 35rpx;
  left: 25rpx;
  color: #fff;
  font-size: 20px;
}
.coupon-item .time{
  position: absolute;
  top: 100rpx;
  left: 25rpx;
  color: rgba(255, 255, 255, 0.658);
  font-size: 14px;
}
.coupon-item .rob{
  position: absolute;
  top: 80rpx;
  right: 25rpx;
  width: 120rpx;
  height: 50rpx;
  border-radius: 25rpx;
  color: #fff;
  border: 1rpx solid #fff;
  text-align: center;
  font-size: 14px;
}
.no-more-goods{
  width: 100%;
  text-align: center;
  font-size: 24rpx;
  margin-top: 10rpx;
  padding-bottom:48rpx; 
  color: #999;
}
.goods-container{
  display: flex;
  justify-content: space-between;  
  flex-wrap:wrap;
  box-sizing: content-box;
  padding: 24rpx;
}
.goods-box{
  width: 100%;
  overflow: hidden;
  border-radius:5px;
}