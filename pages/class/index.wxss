page{
  background: #f5f5f5;
}
/*总体主盒子*/
.container {
  width: 100%;
  height: 100%;
  background-color: #fff;
  color: #939393;
  display: flex;
  flex-direction: row;
}
 
/*左侧栏主盒子*/
.nav_left{
  width: 20%;
  height: 100%;
  /*主盒子设置背景色为灰色*/
  background: #f5f5f5;
}
/*左侧栏list的item*/
.nav_left .nav_left_items{
  width: 100%;
  /*每个高30px*/
  height: 30px;
  /*垂直居中*/
  line-height: 30px;
  /*再设上下padding增加高度，总高42px*/
  padding: 6px 0;
  /*只设下边线*/
  border-bottom: 1px solid #dedede;
  /*文字14px*/
  font-size: 14px;
  text-align: center;
}
/*左侧栏list的item被选中时*/
.nav_left .nav_left_items.active{
  /*背景色变成白色*/
  background: #fff;
}
 
/*右侧栏主盒子*/
.nav_right{
  /*右侧盒子使用了绝对定位*/
  position: absolute;
  top: 0;
  right: 0;
  flex: 1;
  /*宽度75%，高度占满，并使用百分比布局*/
  width: 80%;
  height: 100%;
  box-sizing: border-box;
  background: #fff;
}
/*右侧栏list的item*/
.nav_right .nav_right_items{
  /*浮动向左*/
  float: left;
  /*每个item设置宽度是33.33%*/
  width: 33.33%;
  height: 80px;
  text-align: center;
}
.nav_right .nav_right_items image{
  /*被图片设置宽高*/
  width: 50px;
  height: 30px;
}
.nav_right .nav_right_items text{
  /*给text设成块级元素*/
  display: block;
  margin-top: 5px;
  font-size: 10px;
  /*设置文字溢出部分为...*/
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.goods-container{
  display: flex;
  justify-content: space-between;  
  flex-wrap:wrap;
  box-sizing: content-box;
  padding: 14rpx;
  background-color: #fff;
}
.goods-box{
  width: 49%;
  height: 400rpx;
  background-color: #fff;
  overflow: hidden;
  margin-bottom: 12rpx;
  border-radius:5px;
}
.goods-box .img-box{
  width: 100%;
  height: 300rpx;
  overflow: hidden;
}
.goods-box .img-box image{
   width: 100%;
   height: 300rpx;
}
.goods-box .goods-title{
  width: 80%;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  font-size: 24rpx;
  color:#000;
  margin-left: 24rpx;
}
.goods-box .goods-price{
  width: 280rpx;
  overflow: hidden;
  font-size: 24rpx;
  padding: 12rpx 0;
  color:#e64340;
  margin-left: 24rpx;
}
.no-more-goods{
  text-align: center;
  font-size: 24rpx;
  width: 100%;
  padding-bottom:48rpx; 
  margin-top: 5px;
  color: #999;
}
.coupons-float {
  position: fixed;
  right:15rpx;
  bottom:80rpx;
  width:80rpx;
  height:80rpx;
  background-color: #fff;
  text-align: center;
  border-radius:50%;
  border: 1rpx solid #ddd;
}