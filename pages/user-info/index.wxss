.container{
  min-height: 100%;
  overflow: hidden;
  overflow-y: hidden;
}
.my-item{
    width: 100%;
    border-bottom: 1px solid #eee;
    height: 80rpx;
    line-height: 80rpx;
    padding-left: 60rpx;
    font-size:14px;
    display:flex; 
    align-items: center;
    justify-content: space-between;
}
.my-item-pic{
    width: 100%;
    background: url(https://cdn.it120.cc/images/weappshop/arrow-right.png) no-repeat 730rpx center;
    background-size: 16rpx auto,750rpx auto;
    border-bottom: 1px solid #eee;
    height: 80rpx;
    line-height: 80rpx;
    padding-left: 60rpx;
    font-size:14px;
    display:flex; 
    align-items: center;
    justify-content: space-between;
}
